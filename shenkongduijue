#include<graphics.h> 
#include<mmsystem.h>
#include<Windows.h>
#include<WinUser.h>
#pragma commend(lib,"winmm.lib")

using namespace std;

class Plane{
public:
	double x;
	double y;
	double life;
	double score;
	double tech;
};

void hero_fly() {//获取鼠标坐标//Get the mouse coordinate
	POINT p;
	BOOL GetCursorPos(&p){
		LPPOINT lpPoint;
	}
	IMAGE hero_1;

	loadimage(&hero1, ("H1"), 267, 200);//easyX下的两个函数：loadimage和putimage
	while (1) {
		putimage(p.x, p.y, &hero_1);
	}
}

int main() {
	initgraph(800, 900);//创建一个800像素×900像素的画布
	hero_fly();
	return 0;
}
