#include<mmsystem.h>
#include<Windows.h>
#include<WinUser.h>
#include<conio.h>
#include<cstdlib>
#include<ctime>

#define random(a,b) (rand()%(b-a)+a)
#pragma commend(lib,"winmm.lib")

using namespace std;

class Plane{
public:
	double x;
	double y;
	double life;
	double score;
	double tech;
};

void bg1() {
	IMAGE bg1;
	loadimage(&bg1, ("bg1"), 800, 900);
	while (1) {
		putimage(0, 0, &bg1);
	}
}

void hero_fly() {//获取鼠标坐标
	POINT p;
	BOOL GetCursorPos(&p){
		LPPOINT lpPoint;
	}
	IMAGE hero_1;

	loadimage(&hero1, ("H1"), 267, 200);
	putimage(p.x, p.y, &hero_1);
}

void enemy_1_fly() {
	//P35的飞行方式
	IMAGE P35;
	srand(int(time)0);
	Plane P35;
	P35.x = random[0, 800];
	P35.y = 0;
	while (1) {
		P35.y = P35.y + 3;
		loadimage(&P35, ("P35"), 950, 713);
		putimage(P35.x, P35.y, &P35);
	}
}

void P35_point() {
	int P35_prob;
	while (1) {
		P35_prob = random[0, 100];
		if (P35_prob > 95 && P35_prob <= 100) {
		}
		else {
			enemy_1_fly();
			_sleep(2000);
		}
	}
}

int main() {
	

	int time_out = 1;//暂停值

	char ch;
	while (_kbhit()) {//检测是否有键按下
		ch = getch()//获取键值
		if (ch == 27) {//ESC的键值为27
			time_out = 0;
		}
	}
	initgraph(800, 900);//创建一个800像素×900像素的画布
	while (1) {
		bg1();
		hero_fly();
		P35_point();
		if (time_out == 0) {

		}
	}
	return 0;
}
